<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.AdminMapper">
	
		<select id="memberListCount" resultType="int">
		select count(*) from member
		</select>
	
		<select id="memberpage"  resultType="com.odtn.admin.dto.AdminDto">
			select * from member
		</select> 
	
	
		
		<select id="deleteRead" parameterType="int" resultType="com.odtn.admin.dto.AdminDto">
		select * from member where user_num=#{user_num}
	
		</select>
	
		<update id="memberUpdate" parameterType="com.odtn.admin.dto.AdminDto">
		update member set user_name=#{user_name},nickname=#{nickname},email=#{email} where user_num=#{user_num}
			
		</update>
		
		<delete id="memberDeleteOk" parameterType="int">
			delete from member where user_num =#{user_num}
		</delete>
		
		<!-- board -->
			<select id="boardinfo"  resultType="com.odtn.board.dto.CampInfoDto">
			select * from campinfo
		</select>
		
</mapper>